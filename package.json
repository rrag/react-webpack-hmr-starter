{
  "name": "react-webpack-hmr-starter",
  "version": "0.1.0",
  "description": "Starter kit for ReactJS with webpack HMR and browser sync",
  "main": "src/scripts/index.js",
  "scripts": {
    "clean": "rimraf -rf ./build",
    "watch": "node scripts/watch.js",
    "build:dev": "webpack --config webpack/webpack.config.dev.js",
    "build:prod": "webpack --config webpack/webpack.config.prod.js",
    "build": "npm run clean && npm run build:dev && npm run build:prod",
    "lint": "eslint src test examples"
  },
  "author": "Ragunath Ramaswamy",
  "homepage": "https://github.com/rrag/react-webpack-hmr-starter",
  "license": "MIT",
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "autoprefixer-loader": "^2.0.0",
    "babel-core": "^5.8.21",
    "babel-loader": "^5.3.2",
    "css-loader": "^0.15.6",
    "express": "^4.13.3",
    "file-loader": "^0.8.4",
    "json-loader": "^0.5.2",
    "jsx-loader": "^0.13.2",
    "react-hot-loader": "^1.2.8",
    "rimraf": "^2.4.2",
    "sass-loader": "^1.0.4",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.6",
    "webpack": "^1.10.5",
    "webpack-dev-server": "^1.10.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    ]
  }
}
